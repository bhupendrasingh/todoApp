doctype 
html(ng-app="todoApp")
    head
        title Todo App
        script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js")
        script(src='/todolist.js')

    body
        p This rendered form the template
        div(ng-controller ="TodoListController as todolist")
        span {{todolist.remaining}} of {{todolist.todos.length}} remaining
        ul.unstyled
            li(ng-repeat="todo in todolist.todos")
            label.checkbox
                input(type="checkbox" ng-model="todo.done")
                span(class="done-{{todo.done}}") {{todo.text}}
        form(ng-submit="todolist.addTodo()")
            input(type="text" ng-model="todolist.todoText" size="30" placeholder="add new item")
            input(class="btn-primary" type="submit" value="add")